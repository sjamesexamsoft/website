{
  "repository": "https://github.com/neon-bindings/website.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "website"
  ],
  "scripts": {
    "start": "yarn workspace website start",
    "build": "yarn workspace website build",
    "publish-gh-pages": "yarn workspace website publish-gh-pages",
    "lint": "eslint .",
    "lint-prose": "cp .proselintrc ~/ && proselint docs website/blog website/pages",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "test": "yarn lint",
    "version": "yarn workspace website version"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-bliss": "^4.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "yarn": "^1.17.3"
  },
  "engines": {
    "yarn": ">=1.10.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "bliss"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/no-dynamic-require": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "flowtype-errors/show-errors": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/iframe-has-title": "off",
      "react/jsx-filename-extension": "off",
      "no-unused-vars": "off",
      "react/destructuring-assignment": "off",
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-no-target-blank": "off",
      "react/no-multi-comp": "off",
      "react/no-unescaped-entities": "off",
      "react/prefer-stateless-function": "off",
      "react/prop-types": "off"
    }
  },
  "version": "0.2.0",
  "renovate": {
    "extends": [
      "bliss"
    ]
  },
  "dependencies": {
    "reactstrap": "^8.0.1"
  }
}
